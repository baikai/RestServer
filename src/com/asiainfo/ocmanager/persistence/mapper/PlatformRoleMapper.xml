<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.asiainfo.ocmanager.persistence.mapper.PlatformRoleMapper">
	<select id="selectAllPlatformRoles"
		resultType="com.asiainfo.ocmanager.persistence.model.PlatformRole">
		select * from platform_roles
	</select>
	<select id="selectPlatformRoleById"
		resultType="com.asiainfo.ocmanager.persistence.model.PlatformRole">
		select * from platform_roles where id=#{id}
	</select>
</mapper>