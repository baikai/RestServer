<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.asiainfo.ocmanager.persistence.mapper.ServiceMapper">
	<!-- select all service -->
	<select id="selectAllServices" resultType="com.asiainfo.ocmanager.persistence.model.Service">
		select * from services
	</select>
	<!-- select service by id -->
	<select id="selectServiceById" parameterType="java.lang.String"
		resultType="com.asiainfo.ocmanager.persistence.model.Service">
		select * from services where id=#{id}
	</select>
	<!-- add service -->
	<insert id="insertService" keyProperty="id"
		parameterType="com.asiainfo.ocmanager.persistence.model.Service">
		insert into services (id, servicename, description, origin, serviceType, category)
		  values (#{id}, #{servicename}, #{description}, #{origin}, #{serviceType}, #{category})
	</insert>
	<!-- select service by origin -->
	<select id="selectServicesByOrigin"
		resultType="com.asiainfo.ocmanager.persistence.model.Service">
		select * from services where origin in
		<foreach collection="originList" item="origin" index="index" open="("
			close=")" separator=",">
			#{origin}
		</foreach>
	</select>
	<!-- update service by service name -->
	<update id="updateService" parameterType="com.asiainfo.ocmanager.persistence.model.Service">
		update services set
		id = #{id},
		description = #{description},
		origin = #{origin},
		serviceType = #{serviceType},
		category = #{category}
		where servicename = #{servicename}
	</update>
	<!-- select service by name -->
	<select id="selectServiceByName" parameterType="java.lang.String"
		resultType="com.asiainfo.ocmanager.persistence.model.Service">
		select * from services where servicename=#{servicename}
	</select>
	<!-- select service by id -->
	<select id="selectServicesByServiceType"
		resultType="com.asiainfo.ocmanager.persistence.model.Service">
		select * from services where serviceType in
		<foreach collection="serviceTypes" item="serviceType" index="index" open="("
			close=")" separator=",">
			#{serviceType}
		</foreach>
	</select>
</mapper>